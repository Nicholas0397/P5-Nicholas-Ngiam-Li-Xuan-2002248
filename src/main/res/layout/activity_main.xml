<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp"
            android:typeface="monospace" />

        <!-- Big outline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <!-- Topic Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Topic Icon"
                    android:src="@drawable/topic" />

                <EditText
                    android:id="@+id/etTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Topic"
                    android:typeface="monospace" />

            </LinearLayout>

            <!-- Amount Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Amount Icon"
                    android:src="@drawable/amount" />

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:digits="0123456789."
                    android:hint="EG: 100.00"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:typeface="monospace" />

            </LinearLayout>

            <!-- Currency Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Currency Icon"
                    android:src="@drawable/currency" />

                <Spinner
                    android:id="@+id/spinnerCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:typeface="monospace" />

            </LinearLayout>

            <!-- Number of People Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Person Icon"
                    android:src="@drawable/person" />

                <EditText
                    android:id="@+id/etNumPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Number of Person...EG: 5"
                    android:inputType="number"
                    android:typeface="monospace" />

            </LinearLayout>

        </LinearLayout>

        <!-- Breakdown Options -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Select Breakdown Option:"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEqualBreakdown"
                android:layout_width="122dp"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_selector"
                android:text="Equal Breakdown"
                android:textColor="@drawable/button_text_color_selector"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnCustomBreakdown"
                android:layout_width="125dp"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_selector"
                android:text="Custom Breakdown"
                android:textColor="@drawable/button_text_color_selector"
                android:typeface="monospace" />

            <Button
                android:id="@+id/btnCombinationBreakdown"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_selector"
                android:text="Combination Breakdown"
                android:textColor="@drawable/button_text_color_selector"
                android:typeface="monospace" />

        </LinearLayout>

        <!-- Go Button -->
        <Button
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="#98FB98"
            android:text="Go"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector_navi"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:textColor="@drawable/button_text_color_selector"
            app:srcCompat="@drawable/home_icon" />

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector_navi"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/history_icon" />


    </LinearLayout>




</android.support.constraint.ConstraintLayout>